{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "app/*": ["./src/app/*"],
      "components/*": ["./src/components/*"],
      "hooks/*": ["./src/hooks/*"],
      "layouts/*": ["./src/layouts/*"],
      "shared/*": ["./src/shared/*"],
      "styles/*": ["./src/styles/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "types"]
}
